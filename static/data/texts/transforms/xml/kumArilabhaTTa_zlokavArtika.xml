<TEI>
  <body>
    <div n="1 pratijñāsūtra PJS">
      <pb n="3"/><lg n="1.1" xml:id="v1_1">
        <l n="ab">viśuddhajñānadehāya trivedīdivyacakṣuṣe |</l>
        <l n="cd">śreyaḥprāptinimittāya namaḥ somārdhadhāriṇe ||</l>
      </lg>
      <lg n="1.2" xml:id="v1_2">
        <l n="ab">abhivandya gurūnādau śiṣyadhīpadminīravīn |</l>
        <l n="cd">tatprasādāt kariṣye 'haṃ mīmāṃsāślokavārttikaṃ ||</l>
      </lg>
      <lg n="1.3" xml:id="v1_3">
        <l n="ab">tadvidvāṃso 'nugṛhṇantu cittaśrotraiḥ prasādibhiḥ |</l>
        <l n="cd">santaḥ praṇayivākyāni gṛhṇanti hy anasūyavaḥ ||</l>
      </lg>
      <lg n="1.4" xml:id="v1_4">
        <l n="ab">na cātrātiva kartavyaṃ doṣadṛṣṭiparaṃ manaḥ |</l>
        <l n="cd">doṣo hy avidyamāno 'pi taccittānāṃ prakāśate ||<pb n="4"/></l>
      </lg>
      <lg n="1.5" xml:id="v1_5">
        <l n="ab">kuto vā gṛhṇate doṣaṃ sūrayo madvidhoktiṣu |</l>
        <l n="cd">neṣyate yaḥ parastho 'pi sa svayaṃ gṛhyate katham ||</l>
      </lg>
      <lg n="1.6" xml:id="v1_6">
        <l n="ab">nirdoṣatvaikavākyatvaṃ kva vā lokasya dṛśyate |</l>
        <l n="cd">sāpavādā yataḥ ke cin mokṣasvargāv api prati ||</l>
      </lg>
      <lg n="1.7" xml:id="v1_7">
        <l n="ab">āgamapravaṇaś cāhaṃ nāpavādyaḥ skhaliteṣv apy apodyate |</l>
        <l n="cd">na hi sadvartmanā gacchan skhaliteṣv apy apodyate ||</l>
      </lg>
      <lg n="1.8" xml:id="v1_8">
        <l n="ab">yathā kathañ cid ārabdhā trayīmārgānusāriṇī |</l>
        <l n="cd">vāgvṛttir alpasārāpi śraddadhānasya śobhate ||<pb n="5"/></l>
      </lg>
      <lg n="1.9" xml:id="v1_9">
        <l n="ab">mīmāṃsāśāstratejobhir viśeṣeṇoj jvalīkṛte |</l>
        <l n="cd">vedārthajñānaratne me tṛṣṇātīva vijṛmbhate ||</l>
      </lg>
      <lg n="1.10" xml:id="v1_10">
        <l n="ab">prāyenaiva hi mīmāṃsā loke lokāyatīkṛtā |</l>
        <l n="cd">tāmāstikapathe kartum ayaṃ yatnaḥ kṛto mayā ||</l>
      </lg>
      <lg n="1.11" xml:id="v1_11">
        <l n="ab">athāto dharmajijñāsā sūtram ādyam idaṃ kṛtam |</l>
        <l n="cd">dharmākhyaṃ viṣayaṃ vaktuṃ mīmāṃsāyāḥ prayojanam ||</l>
      </lg>
      <lg n="1.12" xml:id="v1_12">
        <l n="ab">sarvasyaiva hi śāstrasya karmaṇo vāpi kasya cit |</l>
        <l n="cd">yāvat prayojanaṃ noktaṃ tāvat tat kena gṛhyate ||</l>
      </lg>
      <lg n="1.13" xml:id="v1_13">
        <l n="ab">mīmāṃsākhyā tu vidyeyaṃ bahuvidyāntarāśritā |</l>
        <l n="cd">na śuśrūṣayituṃ śakyā prāganuktvā prayojanam ||<pb n="6"/></l>
      </lg>
      <lg n="1.14" xml:id="v1_14">
        <l n="ab">vidyāntareṣu nāpy etad yady abhīṣṭaṃ prayojanam |</l>
        <l n="cd">anarthaprāpaṇaṃ tāvat tebhyo nāśaṅkyate kva cit ||</l>
      </lg>
      <lg n="1.15" xml:id="v1_15">
        <l n="ab">mīmāṃsāyāṃ tv ihājñāte durjñāte vāvivekataḥ |</l>
        <l n="cd">nyāyamārge mahān doṣa iti yatnopacaryatā ||</l>
      </lg>
      <lg n="1.16" xml:id="v1_16">
        <l n="ab">tasmāt prayojanaṃ pūrvam uktaṃ sūtrakṛtā svayam |</l>
        <l n="cd">yat svenoktaṃ vadeyus tad bhāṣyakārādayaḥ katham ||</l>
      </lg>
      <lg n="1.17" xml:id="v1_17">
        <l n="ab">siddhārthaṃ jñātasambandhaṃ śrotuṃ śrotā pravartate |</l>
        <l n="cd">śāstrādau tena vaktavyaḥ sambandhaḥ saprayojanaḥ ||<pb n="7"/></l>
      </lg>
      <lg n="1.18" xml:id="v1_18">
        <l n="ab">śāstraṃ prayojanaṃ caiva sambandhasyāśrayāv ubhau |</l>
        <l n="cd">taduktyantargatas tasmād bhinno noktaḥ prayojanāt ||</l>
      </lg>
      <lg n="1.19" xml:id="v1_19">
        <l n="ab">siddhiḥ śrotṛpravṛttīnāṃ sambandhakathanād yataḥ |</l>
        <l n="cd">tasmāt sarveṣu śāstreṣu sambandhaḥ pūrvam ucyate ||</l>
      </lg>
      <lg n="1.20" xml:id="v1_20">
        <l n="ab">yāvat prayojanenāsya sambandho nābhidhīyate |</l>
        <l n="cd">asambaddhapralāpitvād bhavet tāvad asaṃgatiḥ ||</l>
      </lg>
    </div>
  </body>
</TEI>
